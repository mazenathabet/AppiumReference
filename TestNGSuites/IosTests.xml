<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="IOS Test Suite">

    <listeners>
        <listener class-name="Utils.Listeners"/>  <!-- the directory of the listeners class in the project-->
        <listener class-name="Utils.MyTransformer"/> <!-- to implement RetryAnalyzer on Run time  -->
    </listeners>

    <parameter name="platform" value="IOS"></parameter>
    <parameter name="appPath" value="/src/main/resources/Apps/UIKitCatalog.app"></parameter>

    <test name="End to end Framework IOS Tests">
        <classes>
            <class name="IosTests.AlertsViewsTests">
            </class>
            <class name="IosTests.AutomatingExistingAppWithBundleID">
            </class>
            <class name="IosTests.LongPressTest">
                <methods>
                    <exclude name="testLongPress"></exclude>
                </methods>
            </class>
            <class name="IosTests.PickerHandlingTest">
            </class>
            <class name="IosTests.ScrollingTest">
            </class>
            <class name="IosTests.SlidingTest">
            </class>
        </classes>
    </test>
</suite>